<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginTop="@dimen/dp12"
        android:elevation="@dimen/dp100"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout style="@style/showMemItemLayout">

                <TextView
                    android:id="@+id/cardIdText"

                    style="@style/showMemItemTitle"
                    android:text="@string/cardNumber2" />

                <TextView
                    android:id="@+id/cardId"
                    style="@style/showMemItemValue"
                    android:layout_toRightOf="@id/cardIdText" />

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp12"
                    android:background="@mipmap/edit" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginLeft="@dimen/dp12"
                android:background="@color/lineColor" />

            <RelativeLayout style="@style/showMemItemLayout">

                <TextView
                    android:id="@+id/nameText"
                    style="@style/showMemItemTitle"
                    android:text="@string/name2" />

                <TextView
                    android:id="@+id/name"
                    style="@style/showMemItemValue"
                    android:layout_toRightOf="@id/nameText" />

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp12"
                    android:background="@mipmap/edit" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginLeft="@dimen/dp12"
                android:background="@color/lineColor" />

            <RelativeLayout style="@style/showMemItemLayout">

                <TextView
                    android:id="@+id/carNumberText"
                    style="@style/showMemItemTitle"
                    android:text="@string/carNumber2" />

                <TextView
                    android:id="@+id/carNumber"
                    style="@style/showMemItemValue"
                    android:layout_toRightOf="@id/carNumberText" />

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp12"
                    android:background="@mipmap/edit" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginLeft="@dimen/dp12"
                android:background="@color/lineColor" />

            <RelativeLayout style="@style/showMemItemLayout">

                <TextView
                    android:id="@+id/phoneNumberText"
                    style="@style/showMemItemTitle"
                    android:text="@string/phoneNumber2" />

                <TextView
                    android:id="@+id/phoneNumber"
                    style="@style/showMemItemValue"
                    android:layout_toRightOf="@id/phoneNumberText" />

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp12"
                    android:background="@mipmap/edit" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginTop="@dimen/dp12"
        android:elevation="@dimen/dp100"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout style="@style/showMemItemLayout">

                <TextView
                    android:id="@+id/joinDateText"
                    style="@style/showMemItemTitle"
                    android:text="@string/joinDate2" />

                <TextView
                    android:id="@+id/joinDate"
                    style="@style/showMemItemValue"
                    android:layout_toRightOf="@id/joinDateText" />

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp12"
                    android:background="@mipmap/edit" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginLeft="@dimen/dp12"
                android:background="@color/lineColor" />

            <LinearLayout
                style="@style/showMemItemLayout"
                android:orientation="horizontal">

                <TextView
                    style="@style/showMemItemTitle"
                    android:text="@string/joinDateLength2" />

                <TextView
                    android:id="@+id/joinDateLength"
                    style="@style/showMemItemValue" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginTop="@dimen/dp12"
        android:elevation="@dimen/dp100"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/showMemItemLayout"
                android:orientation="horizontal">

                <TextView
                    style="@style/showMemItemTitle"
                    android:text="@string/lNumberTotal2" />

                <TextView
                    android:id="@+id/LNumberTotal"
                    style="@style/showMemItemValue" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginLeft="@dimen/dp12"
                android:background="@color/lineColor" />

            <LinearLayout
                style="@style/showMemItemLayout"
                android:orientation="horizontal">

                <TextView
                    style="@style/showMemItemTitle"
                    android:text="@string/integralTotal2" />

                <TextView
                    android:id="@+id/integralTotal"
                    style="@style/showMemItemValue" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>